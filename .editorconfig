root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single
max_line_length = 80

[*.{json,yml,md}]
indent_size = 2
quote_type = double
trim_trailing_whitespace = false

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{css,scss,sass,less,html}]
indent_size = 2

[*.{png,jpg,jpeg,gif,svg}]
insert_final_newline = false
trim_trailing_whitespace = false